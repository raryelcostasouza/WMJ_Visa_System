<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.watmarpjan.visaManager.gui.panel.CtrPanePhotoPagePrinting">
   <children>
      <TitledPane collapsible="false" text="Photo Page Printing">
         <content>
            <VBox>
               <children>
                  <TitledPane collapsible="false" text="Monastic Selection">
                     <content>
                        <VBox>
                           <children>
                              <HBox alignment="CENTER" spacing="10.0">
                                 <children>
                                    <Label text="Page Top Half:" />
                                    <ComboBox fx:id="cbMonastic1" onAction="#actionSelectMonastic" prefWidth="150.0" />
                                 </children>
                              </HBox>
                              <HBox alignment="CENTER" spacing="10.0">
                                 <children>
                                    <Label text="Page Bottom Half:" />
                                    <ComboBox fx:id="cbMonastic2" disable="true" onAction="#actionSelectMonastic" prefWidth="150.0" />
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                     </content>
                  </TitledPane>
                  <HBox alignment="CENTER" spacing="10.0">
                     <children>
                        <Button fx:id="bPreview" disable="true" mnemonicParsing="false" onAction="#actionPreviewPhotoPage" text="Preview" />
                        <Button fx:id="bPrint" disable="true" mnemonicParsing="false" onAction="#actionPrintPhotoPage" text="Print" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </content>
      </TitledPane>
   </children>
</VBox>
