<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>

<HBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.watmarpjan.visaManager.gui.panel.CtrPaneMonasticSelection">
    <children>
        <Label text="Selected Monastic: " />
      <ImageView fx:id="ivProfile" fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true" />
        <ComboBox fx:id="cbSelectedMonastic" onAction="#listenerCbSelectedMonastic" prefHeight="25.0" prefWidth="209.0" />
        <CheckBox fx:id="cbShowOnlyActive" mnemonicParsing="false" onAction="#listenerCBShowOnlyActive" selected="true" text="Show only active" />
    </children>
</HBox>
